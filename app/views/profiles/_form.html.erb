<%if !current_user.profile %>
<%= simple_form_for(@profile||=Profile.new) do |f| %>
    <%= f.input :avatar %>
    <%= f.input :description_short %>
    <%= f.input :description_long %>
    <%= f.input :linkedin, placeholder: 'input like this-->   www.linkedin.com/**you**' %>
    <%= f.input :github, placeholder: 'input like this-->   www.github.com/**you**' %>
    <%= f.input :twitter, placeholder: 'input like this-->   www.twitter.com/**you**' %>
    <%= f.input :personal_url, placeholder: 'input like this-->   www.you.com' %>
    <%= f.input :resume %>
    <%= f.input :for_hire, input_html: { class: 'form-control' } %>
    <br>
    <br>
    <div class="actions">
      <%= f.submit %>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<% else %>
<%= simple_form_for current_user.profile, url:profile_path(current_user.profile), method: :put do |f|%>
    <%= f.input :avatar %>
    <%= f.input :description_short %>
    <%= f.input :description_long %>
    <%= f.input :linkedin %>
    <%= f.input :github %>
    <%= f.input :twitter %>
    <%= f.input :personal_url %>
    <%= f.input :resume %>
    <%= f.input :for_hire, input_html: { class: 'form-control' } %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<% end %>
