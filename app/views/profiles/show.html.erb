  <div class="row">
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#education" aria-controls="tasks" role="tab" data-toggle="tab"><i class="fa fa-certificate"></i>
 Education</a></li>
      <li role="presentation"><a href="#experiences" aria-controls="tasks" role="tab" data-toggle="tab"><i class="fa fa-users"></i>
 Experiences</a></li>
      <li role="presentation"><a href="#projects" aria-controls="edit" role="tab" data-toggle="tab"><i class="fa fa-file-text"></i>
 Projects</a></li>
      </li>
    </ul>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="tab-content main_tab">
      <div role="tabpanel" class="tab-pane active" id="education">
        <%= render "front_education" %>
      </div>
      <div role="tabpanel" class="tab-pane" id="experiences">
        <%= render "front_experience" %>
      </div>
      <div role="tabpanel" class="tab-pane" id="projects">
        <%= render "front_projects" %>
      </div>
    </div>
  </div>
</div>

