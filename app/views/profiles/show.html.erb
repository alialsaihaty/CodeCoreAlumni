<div class="container ">
  <div class="row middle_section">
    <div class="col-md-2 col-sm-2">
      <div class="user-wrapper">
        <%= image_tag @profile.avatar.url(:square) %>
      </div>
      <div class="description">
        <h4> <%= @user.full_name%></h4>
        <h5>
        <p> Full Stack Web developper </p>
        <hr>
        <% if @profile.resume? %>
        <button type="button" class="btn btn-success btn-lg">Download Resume</button>
        <% end %>
        <br><br>
        <button type="button" class="btn btn-danger btn-lg">Contact Me</button>
      </div>
    </div>
    <div class="col-md-1 col-sm-1">
    </div>
    <div class="col-md-9 col-sm-9 user-wrapper">
      <p><%= @profile.description_short %></p>
      <hr>
      <p><%= @profile.description_long %></p>
      <h3> Social Links: </h3>
      <hr>
      <% if @profile.github? %>
        <%= link_to fa_icon("github-square"), @profile.github, class:"btn btn-social btn-facebook"%>
      <% end %>
      <% if @profile.linkedin? %>
        <%= link_to fa_icon("linkedin-square"), @profile.linkedin, class:"btn btn-social btn-linkedin"%>
      <% end %>
      <% if @profile.twitter? %>
        <%= link_to fa_icon("twitter-square"), @profile.twitter, class:"btn btn-social btn-facebook"%>
      <% end %>
      <% if @profile.personal_url? %>
        <%= link_to fa_icon("external-link"), @profile.personal_url, class:"btn btn-social btn-facebook"%>
      <% end %>
    </div>
  </div>
</div>
<br>
<br>
<div class="container">
  <div class="row">
    <ul class="nav nav-pills" role="tablist">
      <li role="presentation" class="active"><a href="#skills" aria-controls="home" role="tab" data-toggle="tab">Skills</a></li>
      <li role="presentation"><a href="#education" aria-controls="tasks" role="tab" data-toggle="tab">Education</a></li>
      <li role="presentation"><a href="#experiences" aria-controls="tasks" role="tab" data-toggle="tab">Experiences</a></li>
      <li role="presentation"><a href="#projects" aria-controls="edit" role="tab" data-toggle="tab">Projects</a></li>
      </li>
    </ul>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="skills">
        <%= render "skills" %>
      </div>
      <div role="tabpanel" class="tab-pane" id="education">
        <%= render "education" %>
      </div>
      <div role="tabpanel" class="tab-pane" id="experiences">
        <%= render "experience" %>
      </div>
      <div role="tabpanel" class="tab-pane" id="projects">
        <%= render "projects" %>
      </div>
    </div>
  </div>
</div>
