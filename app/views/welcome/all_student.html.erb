<h1>All Students</h1>

  <div class="box">
    <% @profiles.each do |profile| %>
    <div class="thumbnail">
      <img src="<%= profile.avatar.url%>" alt="...">
      <div class="caption">
        <h3><%= user.full_name %></h3>
        <p class="word"><%= profile.description_short %></p>
        <p><%= link_to( "View Profile", ("/profiles/" + user.slug), html_options = {class: "btn btn-primary", role: "button"}) %></p>
      </div>
    </div>
    <% end %>
  </div>
